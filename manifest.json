{
  "manifest_version": 3,
  "name": "Graphite GitHub Editor Shortcut",
  "version": "1.0.0",
  "description": "Press '.' on Graphite PR pages to open the GitHub web editor",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [],
  "content_scripts": [
    {
      "matches": ["https://app.graphite.com/github/pr/*/*/*/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
